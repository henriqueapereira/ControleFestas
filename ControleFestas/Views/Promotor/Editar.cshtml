@model PromotorModel

<h1>Promotor - Editar</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">

                @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
                {
                    <div class="alert alert-danger">@ViewBag.Mensagem</div>
                }

                <form method="post" action="/Promotor/Editar">
                    <input type="hidden" name="promotorId" value="@Model.PromotorId" />
                    <div class="form-group">
                        <label>Nome:</label>
                        <input type="text" name="nome" value="@Model.Nome" class="form-control w-50" size="30" />
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input type="text" name="email" value="@Model.Email" class="form-control w-50" />
                    </div>

                    <div class="form-group">
                        <label>Senha:</label>
                        <input type="text" name="senha" value="@Model.Senha" class="form-control w-25" />
                    </div>
                    <div class="form-group">
                        <label>Telefone:</label>
                        <input type="text" name="regra" value="@Model.Telefone" class="form-control w-25" />
                    </div>

                    <hr class="hr" />
                    <input type="submit" value="Enviar" />
                </form>
            </div>
        </div>
    </div>
</div>