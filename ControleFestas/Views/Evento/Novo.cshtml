@model EventoModel


<h1>Evento - Novo</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">

                @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
                {
                    <div class="alert alert-danger">@ViewBag.Mensagem</div>
                }

                <form method="post" action="/Evento/Novo">
                    <div class="form-group">
                        <label>Titulo:</label>
                        <input type="text" name="titulo" value="@Model.Titulo" class="form-control w-50" size="30" />
                    </div>
                    <div class="form-group">
                        <label>Responsável:</label>
                        <input type="text" name="responsável" value="@Model.Responsavel" class="form-control w-25" size="30" />
                    </div>
                    <div class="form-group">
                        <label>Telefone Responsável:</label>
                        <input type="text" name="telefone" value="@Model.TelefoneResponsavel" class="form-control w-25" size="30" />
                    </div>
                    <div class="form-group">
                        <label>Promotor:</label>
                        <select name="promotor" class="form-control w-25">
                            <option value="0">Selecione</option>
                            <option value="1">Andreia</option>
                            <option value="2">Cristina</option>
                            <option value="3">Jorge</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Cidade:</label>
                        <input type="text" name="cidade" value="@Model.Cidade" class="form-control w-25" />
                    </div>
                    <div class="form-group">
                        <label>Data:</label>
                        <input type="date" name="data" value="@Model.Data" class="form-control w-25" />
                    </div>
                    <div class="form-group">
                        <label>Horário Inicial:</label>
                        <input type="time" name="HorarioInicial" value="@Model.HorarioInicial" class="form-control w-25" />
                    </div>
                    <div class="form-group">
                        <label>Horário Final:</label>
                        <input type="time" name="HorarioFinal" value="@Model.HorarioFinal" class="form-control w-25" />
                    </div>
                    <td class="actions" width="220">
                        
                        <a href="/Convidado/Index">Lista de convidados</a>
                        
                    </td>
                    @*
                    <div class="form-group">
                        <input type="checkbox" checked="@Model.Disponivel" name="disponivel" class="form-check-input" />
                        <label class="form-check-label">Disponível</label>
                    </div>
                    
                    <div class="form-group">
                        <label>Sugestão de troca:</label>
                        <textarea name="SugestaoTroca" class="form-control w-75">@Model.SugestaoTroca</textarea>
                    </div>
                    <div class="form-group">
                        <label>Valor:</label>
                        <input type="number" name="valor" value="@Model.Valor" class="form-control w-25" />
                    </div>
                    <div class="form-group">
                        <label>Data da Expiração:</label>
                        <input type="text" name="DataExpiracao" value="@Model.DataExpiracao"
                               class="form-control w-25" />
                    </div>
                    *@
                    <hr class="hr" />
                    <input type="submit" value="Enviar" />
                </form>
            </div>
        </div>
    </div>
</div>
